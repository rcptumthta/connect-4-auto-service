{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS Application",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug",
        "--",
        "--inspect-brk"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "restart": true
    }
  ]
}
